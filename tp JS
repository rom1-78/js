<body>
		<script type="text/javascript">
			var note1 = Number(prompt("donner la premiere note"));
			var note2 = Number(prompt("donner la deuxieme note"));
			var note3 = Number(prompt("donner la troisieme note"));
			var somme = note1*2+note2*2+note3*3;
			var moy = somme /7;

			if (moy<10)
				document.write("trimestre invalidé")
				
			else
				document.write("trimestre validé")
			
				document.write("<table border=2>");
				document.write("<td> voila la somme des note en fonction des coefficients:" + somme + "</td>");
				document.write("<td>" + "voila la moyenne:" + moy + "</td>");
				document.write("</table>");
		</script>
</body>
</html>